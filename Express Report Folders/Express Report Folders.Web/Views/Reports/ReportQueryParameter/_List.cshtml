@model IEnumerable<Express_Report_Folders.Web.Models.ReportQueryParameter>
@using controller = Express_Report_Folders.Web.Controllers.ReportsController

<p>
	@Html.ActionLink("Create New", nameof(controller.Create))
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Identifier)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ValueString)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ValueType)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Identifier)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ValueString)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ValueType)
			</td>
			<td>
				@Html.ActionLink("Edit", nameof(controller.Edit), new { id = item.Id }) |
				@Html.ActionLink("Details", nameof(controller.Details), new { id = item.Id }) |
				@Html.ActionLink("Delete", nameof(controller.Details), new { id = item.Id })
			</td>
		</tr>
	}

</table>
