@model IEnumerable<Express_Report_Folders.Web.Models.Report>
@using controller = Express_Report_Folders.Web.Controllers.ReportsController

@{
	ViewBag.Title = "List Of Reports";
}

<h2>@ViewBag.Title</h2>

<p>
	@Html.ActionLink("Create New", nameof(controller.Create))
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.ActionLink("Edit", nameof(controller.Edit), new { id=item.Id }) |
			@Html.ActionLink("Details", nameof(controller.Details), new { id=item.Id }) |
			@Html.ActionLink("Delete", nameof(controller.Delete), new { id = item.Id }) |
			@Html.ActionLink("Build", nameof(controller.Build), new { id = item.Id }) |
			@Html.ActionLink("Run", nameof(controller.Run), new { id = item.Id })
		</td>
	</tr>
}

</table>
