@model IEnumerable<Express_Report_Folders.Web.Models.DbConnection>
@using controller = Express_Report_Folders.Web.Controllers.DbConnectionsController

@{
	ViewBag.Title = "Db Connections";
}

<h2>@ViewBag.Title</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ConnectionString)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<th>
				@Html.DisplayFor(modelItem => item.Name)
			</th>
			<td>
				@Html.DisplayFor(modelItem => item.ConnectionString)
			</td>
			<td>
				@Html.ActionLink("Edit", nameof(controller.Edit), new { id = item.Id }) |
				@Html.ActionLink("Details", nameof(controller.Details), new { id = item.Id }) |
				@Html.ActionLink("Delete", nameof(controller.Delete), new { id = item.Id })
			</td>
		</tr>
	}

</table>
