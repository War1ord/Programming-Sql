@model Express_Report_Folders.Web.Models.DbConnection
@using controller = Express_Report_Folders.Web.Controllers.DbConnectionsController

@{
	ViewBag.Title = "Delete a Db Connection";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Db Connection</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Name)
		</dd>

	</dl>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.ConnectionString)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ConnectionString)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-default" /> |
